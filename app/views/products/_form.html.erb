<div class="edit-form container-fluid col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
  <%= form_for(product) do |f| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :name, class: "edit-labels" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Please enter the product name" %>
    </div>

    <div class="field form-group">
      <%= f.label :description, class: "edit-labels" %>
      <%= f.text_area :description, class: "form-control", placeholder: "Please enter a description of the product" %>
    </div>

    <div class="field form-group">
      <%= f.label :image_url, class: "edit-labels" %>
      <%= f.text_field :image_url, class: "form-control", placeholder: "Please enter the product image url" %>
    </div>

    <div class="field form-group">
      <%= f.label :colour, class: "edit-labels" %>
      <%= f.text_field :colour, class: "form-control", placeholder: "Please enter the price color code" %>
    </div>

    <div class="field form-group">
      <%= f.label :price_in_cents, class: "edit-labels" %>
      <%= f.text_field :price_in_cents, class: "form-control", placeholder: "Please enter the price per dozen in cents" %>
    </div>

    <div class="actions">
      <%= f.submit class: "btn btn-default submit-button" %>
    </div>
  <% end %>
</div> <!-- end container-fluid -->
