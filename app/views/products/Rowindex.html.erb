<p id="notice"><%= notice %></p>

<h1>Yummy Cookies!</h1>

<div class="row">
  <% @products.each do |product| %>
    <h2 class="product-name col-md-4"><%= product.name %></h2>
  <% end %>
</div>

<div class="row">
  <% @products.each do |product| %>
  <%= image_tag(product.image_url, class: "col-md-4 img-responsive prod-img") %>
  <% end %>
</div>

<div class="row">
  <% @products.each do |product| %>
  <p class="product-desc col-md-4"><%= product.description %></p>
  <% end %>
</div>

<div class="row">
  <% @products.each do |product| %>
  <div>
    <p class="col-md-4 edit-links">
    <%= link_to 'Show', product %>
    <%= link_to 'Edit', edit_product_path(product) %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
    <% end %>
  </div>
</div>

<div>
<p class="new-prod-link"><%= link_to 'New Product', new_product_path %></p>
</div>
