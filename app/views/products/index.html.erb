<div class="container-fluid">
  <div class="col-md-12">
    <%= image_tag("yc-logo.png", class: "img-responsive col-md-4 col-md-offset-4") %>
  </div>

  <div class="product-page">

    <div class="search-results">
      <% if params[:q] %>
        <h3> Your search returned <%= @products.size %> result(s).</h3>
      <% end %>
    </div>

    <% cache(cache_key_for_products) do %>
      <%= render @products %>
    <% end %>

    <div class="new-prod-link col-md-12">
      <% if can? :create, @product %>
        <%= link_to 'New Product', new_product_path, :class => "btn btn-warning btn-lg" %>
      <% end %>
    </div> <!-- end new-prod-link -->

  </div> <!-- end product-page -->

</div>
