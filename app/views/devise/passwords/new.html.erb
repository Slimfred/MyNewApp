<h2>Forgot your password?</h2>

<div class="user-form container-fluid col-sm-4 col-sm-offset-4 col-xs-10 col-xs-offset-1">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: "user-labels" %>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Please enter your email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-default submit-button" %>
    </div>
  <% end %>

</div> <!-- end user-form -->

<div class="shared-links col-sm-12">
  <%= render "devise/shared/links" %>
</div>
