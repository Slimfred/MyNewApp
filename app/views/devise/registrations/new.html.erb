<div class="new-user-form container-fluid">
  <h2> Sign up </h2>

  <div class="user-form container-fluid col-sm-4 col-sm-offset-4 col-xs-10 col-xs-offset-1">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: "user-labels" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Please enter your email" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "user-labels" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Please enter your password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "user-labels" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Please confirm your password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-default submit-button" %>
      </div>
    <% end %>
  </div> <!-- end user-form -->

  <div class="shared-links col-sm-12">
    <%= render "devise/shared/links" %>
  </div>

</div> <!-- end new-user-form -->
