<div class="container-fluid">
  <h1>Users</h1>

  <div class="user-form col-sm-10 col-sm-offset-1">
    <table>
      <thead>
        <tr>
          <th class="column-head">First name</th>
          <th class="column-head">Last name</th>
          <th class="column-head">Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="column-data col-sm-2"><%= user.first_name %></td>
            <td class="column-data col-sm-2"><%= user.last_name %></td>
            <td class="column-data col-sm-2"><%= user.email %></td>
            <td class="col-sm-1 table-links"><%= link_to 'Show', user %></td>
            <td class="col-sm-1 table-links"><%= link_to 'Edit', edit_user_registration_path(user) %></td>
            <!-- <td class="col-sm-1 table-links"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'New User', new_user_registration_path, class: "btn btn-default new-user-button"%>
  </div> <!-- end user-table -->
</div> <!-- end user-form -->
